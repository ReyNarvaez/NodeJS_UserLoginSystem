extends layout

block title
	title #{title}

block content
	h2.page-header Register
	p
		| Please register using the form below
	if errors
		each error, i in errors
			div.alert.alert-danger #{error.msg}
	form(method='post',action='/users/register', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name',type='text',placeholder='Enter Name', value=form.name)
		.form-group
			label Email
			input.form-control(name='email',type='email',placeholder='Enter Email', value=form.email)
		.form-group
			label Username
			input.form-control(name='username',type='text',placeholder='Enter Username', value=form.username)
		.form-group
			label Password
			input.form-control(name='password',type='password',placeholder='Enter Password')
		.form-group
			label Connfirm Password
			input.form-control(name='password2',type='password',placeholder='Confirm Password')
		.form-group
			label Profile Image
			input.form-control(name='profileImage',type='file')
		input.btn.btn-default(name='submit',type="submit",value='Register')